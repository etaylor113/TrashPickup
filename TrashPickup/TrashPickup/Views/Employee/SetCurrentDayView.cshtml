@model TrashPickup.Models.RegisterViewModel

@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "SetCurrentDayView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Set Current Day</h2>

<h4> Please type what day it is.</h4>

@using (Html.BeginForm("SetCurrentDayView", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.CurrentDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CurrentDay, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Update" />
            </div>
        </div>
    </div>
}